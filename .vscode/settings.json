{
    // Editor settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.wordWrap": "off",
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.renderWhitespace": "boundary",
    // PHP specific settings
    "php.suggest.basic": false,
    "[php]": {
        "editor.formatOnSave": true
    },
    "php.validate.enable": true,
    "php.validate.run": "onSave",
    // WordPress specific settings
    "phpcs.standard": "WordPress",
    "phpcbf.standard": "WordPress",
    "phpcbf.onsave": true,
    "intelephense.environment.includePaths": [
        "../../..",
        "../../../wp-includes",
        "../../../wp-admin"
    ],
    // File associations
    "files.associations": {
        "*.php": "php",
        "*.json": "jsonc"
    },
    // File exclusions
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/tmp": true
    },
    // Search exclusions
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/vendor": true
    }, // Path intellisense for WordPress
    "path-intellisense.mappings": {
        "/": "${workspaceRoot}",
        "includes": "${workspaceRoot}/includes",
        "tng": "c:/xampp/htdocs/tng",
        "archived": "C:/Users/Joe/archived_HeritagePress"
    },
    // Git settings
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    // Debug configurations
    "debug.allowBreakpointsEverywhere": true,
    "php.debug.ideKey": "VSCODE"
}