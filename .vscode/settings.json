{
    // This workspace is directly in the WordPress plugin directory
    // Path: c:\MAMP\htdocs\wordpress\wp-content\plugins\heritagepress\HeritagePress
    // Editor settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.wordWrap": "off",
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.renderWhitespace": "boundary",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.suggestSelection": "first",
    // PHP settings
    "php.suggest.basic": true,
    "php.validate.enable": true,
    "php.validate.executablePath": "C:\\MAMP\\bin\\php\\php8.1.0\\php.exe",
    "php.executablePath": "C:\\MAMP\\bin\\php\\php8.1.0\\php.exe",
    // Language specific settings
    "[php]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
    },
    // File associations
    "files.associations": {
        "*.php": "php",
        "*.phtml": "php",
        "*.inc": "php"
    },
    // Search settings
    "search.exclude": {
        "**/vendor": true,
        "**/node_modules": true,
        "**/references": true
    }
}